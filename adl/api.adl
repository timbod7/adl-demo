module api {

import types.HttpPost;

struct Api {
  HttpPost<Empty,Empty> ping = {
    "path" : "/ping",
    "security" : "public"
  };

  HttpPost<LoginReq,Jwt> login = {
    "path" : "/login",
    "security" : "public"
  };

  HttpPost<Message,Empty> newMessage = {
    "path" : "/new-message",
    "security" : "token"
  };
};

struct Empty {
};

type Jwt = String;

struct LoginReq {
  String email;
  String password;
};

struct Message {
  String body;
};


};
